@using eCommerceApplication.Models;
@model IEnumerable<Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Products List!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.PageTitle</h1>
<hr />
@if (Model.Count()>0)
{
    <div class="container text-center">
        <div class="row">
            @foreach (Product product in Model)
            {
                <div class="card shadow-lg m-2 bg-body-tertiary rounded" style="width: 20rem;">
                    <img src=@Url.Content(product.Picture) class="card-img-top" alt=@product.ProductName>
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.Description</p>
                        <hr>
                        <a class="btn btn-info" asp-area="Products" asp-controller="Home" asp-action="Details" asp-route-id="@product.ProductId">View Details</a> | <a class="btn btn-success" asp-area="Products" asp-controller="Home" asp-action="CategoryWiseProducts" asp-route-id="@product.ProductId">Show Products</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h1>No Products Available under this Category!</h1>
}


